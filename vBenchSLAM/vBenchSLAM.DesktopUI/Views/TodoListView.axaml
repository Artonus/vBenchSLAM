<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:vBenchSLAM.DesktopUI.Models"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="800"
             x:Class="vBenchSLAM.DesktopUI.Views.TodoListView">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" Command="{Binding $parent[Window].DataContext.AddItem}">
            Add new Item
        </Button>
        <ItemsControl Items="{Binding Items}">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="models:TodoItem">
                    <CheckBox Margin="4"
                              IsChecked="{Binding IsChecked}"
                              Content="{Binding Description}"></CheckBox>        
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </DockPanel>
</UserControl>